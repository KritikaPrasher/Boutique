<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kritikaprasher.boutique.Top">

    <TextView
        android:id="@+id/topstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Top Style"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

    <TextView
        android:id="@+id/bottomstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Select Bottom Style"

        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/spinnerbottomstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/neckstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Neck Style"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/spinnerneckstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/sleevestyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Sleeve Style "
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/spinnersleevestyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/fabric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Fabric"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:id="@+id/spinnerfabric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

</LinearLayout>
